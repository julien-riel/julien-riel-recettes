function categorizeIngredient(ingredient) {
    const lower = ingredient.toLowerCase();
    
    for (const [category, keywords] of Object.entries(CATEGORIES_INGREDIENTS)) {
        for (const keyword of keywords) {
            if (lower.includes(keyword)) {
                return category;
            }
        }
    }
    return 'Autres';
}

function generateGroceryPrint() {
    const content = document.getElementById('grocery-list-content');
    content.innerHTML = '';
    
    if (selectedRecipes.size === 0) {
        content.innerHTML = '<p>Aucune recette s√©lectionn√©e. Allez dans l\'onglet "S√©lection" pour choisir vos recettes.</p>';
        document.getElementById('grocery-print-area').classList.add('visible');
        document.getElementById('grocery-recipe-count').textContent = '0';
        return;
    }
    
    const selected = RECETTES.filter(r => selectedRecipes.has(r.num));
    document.getElementById('grocery-recipe-count').textContent = selected.length;
    
    // Collecter tous les ingr√©dients par cat√©gorie
    const categorized = {};
    
    selected.forEach(recette => {
        recette.ingredients.forEach(ing => {
            const category = categorizeIngredient(ing);
            if (!categorized[category]) {
                categorized[category] = new Set();
            }
            categorized[category].add(ing);
        });
    });
    
    // Ordre des cat√©gories
    const orderedCategories = [
        'Viandes & Poissons',
        'L√©gumes frais',
        'Herbes fra√Æches',
        'F√©culents',
        'L√©gumineuses & Prot√©ines v√©g√©tales',
        'Conserves & Sauces',
        '√âpices & Condiments',
        'Huiles & Mati√®res grasses',
        'Autres'
    ];
    
    orderedCategories.forEach(category => {
        if (categorized[category] && categorized[category].size > 0) {
            const section = document.createElement('div');
            section.className = 'grocery-section';
            
            const items = Array.from(categorized[category]).sort();
            
            section.innerHTML = `
                <h3>${category}</h3>
                <ul class="grocery-list">
                    ${items.map(item => `<li><span class="check-box">‚òê</span> ${item}</li>`).join('')}
                </ul>
            `;
            
            content.appendChild(section);
        }
    });
    
    document.getElementById('grocery-print-area').classList.add('visible');
}

