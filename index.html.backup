        planner.appendChild(col);
    });
    
    updateWeekPlannerOptions();
}

function updateWeekPlannerOptions() {
    const jours = Object.keys(weekPlan);
    
    jours.forEach(jour => {
        const select = document.getElementById(`${jour}-souper`);
        if (!select) return;
        
        const currentValue = select.value;
        select.innerHTML = '<option value="">-- Choisir --</option>';
        
        // Ajouter toutes les recettes (s√©lectionn√©es en premier)
        const selected = RECETTES.filter(r => selectedRecipes.has(r.num));
        const other = RECETTES.filter(r => !selectedRecipes.has(r.num));
        
        if (selected.length > 0) {
            const optgroup = document.createElement('optgroup');
            optgroup.label = '‚≠ê S√©lectionn√©es';
            selected.forEach(r => {
                const opt = document.createElement('option');
                opt.value = r.num;
                opt.textContent = `#${r.num} ${r.nom}`;
                optgroup.appendChild(opt);
            });
            select.appendChild(optgroup);
        }
        
        const optgroupOther = document.createElement('optgroup');
        optgroupOther.label = 'Autres recettes';
        other.forEach(r => {
            const opt = document.createElement('option');
            opt.value = r.num;
            opt.textContent = `#${r.num} ${r.nom}`;
            optgroupOther.appendChild(opt);
        });
        select.appendChild(optgroupOther);
        
        // Restaurer la valeur
        if (currentValue) {
            select.value = currentValue;
        }
    });
}

function updateMeal(jour, value) {
    weekPlan[jour] = value ? parseInt(value) : null;
}

function autoFillWeek() {
    const selected = Array.from(selectedRecipes);
    if (selected.length === 0) {
        alert('Veuillez d\'abord s√©lectionner des recettes dans l\'onglet "S√©lection"');
        return;
    }
    
    const jours = Object.keys(weekPlan);
    let index = 0;
    
    jours.forEach(jour => {
        if (index < selected.length) {
            weekPlan[jour] = selected[index];
            document.getElementById(`${jour}-souper`).value = selected[index];
            index++;
        } else {
            // Boucler si moins de 7 recettes s√©lectionn√©es
            const recycledIndex = index % selected.length;
            weekPlan[jour] = selected[recycledIndex];
            document.getElementById(`${jour}-souper`).value = selected[recycledIndex];
            index++;
        }
    });
}

function clearWeek() {
    Object.keys(weekPlan).forEach(jour => {
        weekPlan[jour] = null;
        document.getElementById(`${jour}-souper`).value = '';
    });
}

