function renderWeekPlanner() {
    const planner = document.getElementById('week-planner');
    planner.innerHTML = '';
    
    const jours = Object.keys(weekPlan);
    
    jours.forEach(jour => {
        const col = document.createElement('div');
        col.className = 'day-column';
        col.innerHTML = `
            <div class="day-header">${jour}</div>
            <div class="day-content">
                <div class="meal-slot">
                    <label>Souper</label>
                    <select id="${jour}-souper" onchange="updateMeal('${jour}', this.value)">
