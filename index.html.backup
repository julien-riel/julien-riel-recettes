function renderRecipes(filter = 'all') {
    const grid = document.getElementById('recipes-grid');
    grid.innerHTML = '';
    
    RECETTES.forEach(recette => {
        if (filter !== 'all') {
            const region = getRegion(recette.origine);
            if (region !== filter) return;
        }
        
        const card = document.createElement('div');
        card.className = `recipe-card ${selectedRecipes.has(recette.num) ? 'selected' : ''}`;
        card.innerHTML = `
            <div class="header">
                <input type="checkbox" class="checkbox" ${selectedRecipes.has(recette.num) ? 'checked' : ''} 
                    onchange="toggleRecipe(${recette.num}, event)">
                <span class="num">${recette.num}</span>
                <span class="nom">${recette.nom}</span>
            </div>
            <div class="origine">${recette.origine} ‚Ä¢ ${recette.portions} portions</div>
            <div class="description">${recette.description}</div>
            <div class="meta">
                <span>‚è±Ô∏è ${recette.temps_prep_semaine}</span>
                <span>üì¶ ${recette.conservation.split('|')[0].trim()}</span>
            </div>
        `;
        card.addEventListener('click', (e) => {
            if (e.target.tagName !== 'INPUT') {
                showRecipeDetail(recette.num);
            }
        });
        grid.appendChild(card);
    });
    
    updateCount();
}

function filterRecipes(region) {
    renderRecipes(region);
}

function toggleRecipe(num, event) {
    if (event) event.stopPropagation();
    
    if (selectedRecipes.has(num)) {
        selectedRecipes.delete(num);
    } else {
        selectedRecipes.add(num);
    }
    
    const card = event?.target?.closest('.recipe-card');
    if (card) {
        card.classList.toggle('selected');
    }
    
    updateCount();
    updateWeekPlannerOptions();
}

function selectAll() {
    RECETTES.forEach(r => selectedRecipes.add(r.num));
    renderRecipes();
    updateWeekPlannerOptions();
}

function deselectAll() {
    selectedRecipes.clear();
    renderRecipes();
    updateWeekPlannerOptions();
}

function updateCount() {
    document.getElementById('count').textContent = selectedRecipes.size;
}

